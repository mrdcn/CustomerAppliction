<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.another.customapplication.activity.BActivity">

    <TextView

        android:id="@+id/bac"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="B"

        android:textColor="#772862"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bac"
        android:layout_marginTop="10dp"
        android:text="open"
        android:textColor="#FF4081" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bac"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/open"
        android:text="close"
        android:textColor="#FF4081" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.another.customapplication.view.HorizontalDragView
        android:id="@+id/drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@id/drager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dd22">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@id/drag_header"
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <View
                android:background="#f765"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>


        </LinearLayout>
        </ScrollView>

    </com.another.customapplication.view.HorizontalDragView>

</RelativeLayout>
